{
    "verbose": true,
    "ignore": ["public/assets"],
    "events": {
        "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
        "config/",
        "core/",
        "modules/",
        "routes/",
        "resources/",
        "./server.js",
        "./webpack.config.js"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js pug vue scss"
}